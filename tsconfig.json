{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2017",
    "allowJs": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    "config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "typePatches"
  ]
}